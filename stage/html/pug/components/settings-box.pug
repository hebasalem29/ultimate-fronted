.settings-box.hide-settings
  .toggle-settings
    i.fas.fa-cog.fa-lg
  .settings-content
    .option-box.color-options
      h4.option-title color options
      - var themes = ["green-theme","blue-theme","orange-theme"]
      ul.list-unstyled
        each theme in themes
          li(data-theme=theme)
    .option-box.font-options
      h4.option-title  font
      - var fonts=["open","puplic","roboto","source"]
        select.form-control
          each font in fonts
            option(value=font)=font
    .option-box
      h4.option-title  sidebar 